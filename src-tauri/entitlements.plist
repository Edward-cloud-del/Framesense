<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- CRITICAL: Screen recording permission for macOS -->
    <key>com.apple.security.device.screen-recording</key>
    <true/>
    
    <!-- CRITICAL: Camera access (sometimes required for screen capture) -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Enable accessibility access for global shortcuts -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Allow input monitoring for global shortcuts -->
    <key>com.apple.security.device.input-monitoring</key>
    <true/>
    
    <!-- Allow network access for Railway backend -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow outgoing network connections -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- CRITICAL: Disable sandbox for unsigned apps -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- CRITICAL: Disable library validation for unsigned apps -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- CRITICAL: Allow unsigned executable memory -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- CRITICAL: Allow arbitrary loads for screen capture -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Enable file system access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist> 